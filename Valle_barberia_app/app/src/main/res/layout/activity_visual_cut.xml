<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Visual_cut"
    android:background="@drawable/night_city">

    <include layout="@layout/action_bar_2"
        android:id="@+id/action_bar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="30dp"
        android:layout_margin="40dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_below="@+id/action_bar">

        <EditText
            android:id="@+id/et_date"
            android:drawableStart="@drawable/calendar"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:inputType="date"
            android:paddingStart="50dp"
            android:focusable="false"
            android:clickable="true"
            android:maxLines="1"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            style="@style/ed_text_style" />

        <Button
            android:id="@+id/btn_show"
            style="@style/buttonsMainApp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:onClick="btn_show_cuts"
            android:text="@string/btn_show_cut" />

        <ListView
            android:id="@+id/list_view_cuts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/tv_total"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:text="Total: "
            android:background="#000000"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:visibility="gone"/>

    </LinearLayout>



</RelativeLayout>